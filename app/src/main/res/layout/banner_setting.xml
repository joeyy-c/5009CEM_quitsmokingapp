<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BannerSetting">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="335dp"
        android:layout_height="223dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnUploadBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="btnUploadBannerOnClick"
        android:text="Upload Banner"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveBanner"
        app:layout_constraintEnd_toEndOf="@+id/ivBanner"
        app:layout_constraintStart_toStartOf="@+id/ivBanner" />

    <Button
        android:id="@+id/btnSaveBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Save Changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnUploadBanner"
        app:layout_constraintStart_toStartOf="@+id/btnUploadBanner"
        android:onClick="btnSaveBannerOnClick" />
</androidx.constraintlayout.widget.ConstraintLayout>